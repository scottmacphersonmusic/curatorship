<h1>Listing Venues</h1>

<div>
  <h4><%= link_to 'New Venue', new_venue_path %></h4>
  <%= link_to 'Concerts', concerts_path %> |
  <%= link_to 'Artists', artists_path %>
</div>

<hr/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Capacity</th>
      <th>All ages</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr>
        <td><%= link_to venue.name, venue %></td>
        <td><%= venue.capacity %></td>
        <td><%= venue.all_ages %></td>
        <td><%= link_to 'Edit', edit_venue_path(venue) %></td>
        <td><%= link_to 'Destroy', venue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
