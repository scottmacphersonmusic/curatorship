<h1>Listing Artists</h1>
<h4><%= link_to 'New Artist', new_artist_path %></h4>
<%= link_to 'Concerts', concerts_path %>
<%= link_to 'Venues', venues_path %>

<hr/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Draw</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.name, artist %></td>
        <td><%= artist.genre %></td>
        <td><%= artist.draw %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
